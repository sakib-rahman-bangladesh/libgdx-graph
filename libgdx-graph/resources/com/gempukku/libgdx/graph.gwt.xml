<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Google Inc.//DTD Google Web Toolkit trunk//EN"
		"http://google-web-toolkit.googlecode.com/svn/trunk/distro-source/core/src/gwt-module.dtd">
<module>
	<source path="graph"/>

	<!-- GLSL fragments -->
	<extend-configuration-property name="gdx.files.classpath" value="glsl/fragment/applyNormalMap.glsl"/>
	<extend-configuration-property name="gdx.files.classpath" value="glsl/fragment/directionalLightContribution.glsl"/>
	<extend-configuration-property name="gdx.files.classpath" value="glsl/fragment/pointLightContribution.glsl"/>
	<extend-configuration-property name="gdx.files.classpath" value="glsl/fragment/spotLightContribution.glsl"/>
	<extend-configuration-property name="gdx.files.classpath" value="glsl/fragment/noise/common.glsl"/>
	<extend-configuration-property name="gdx.files.classpath" value="glsl/fragment/noise/perlinNoise2d.glsl"/>
	<extend-configuration-property name="gdx.files.classpath" value="glsl/fragment/noise/perlinNoise3d.glsl"/>
	<extend-configuration-property name="gdx.files.classpath" value="glsl/fragment/noise/perlinNoise4d.glsl"/>
	<extend-configuration-property name="gdx.files.classpath" value="glsl/fragment/noise/simplexNoise2d.glsl"/>
	<extend-configuration-property name="gdx.files.classpath" value="glsl/fragment/noise/simplexNoise3d.glsl"/>
	<extend-configuration-property name="gdx.files.classpath" value="glsl/fragment/noise/simplexNoise4d.glsl"/>
	<extend-configuration-property name="gdx.files.classpath" value="glsl/fragment/voronoiDistance.glsl"/>
	<extend-configuration-property name="gdx.files.classpath" value="glsl/fragment/packFloatToVec3.glsl"/>
	<extend-configuration-property name="gdx.files.classpath" value="glsl/fragment/unpackVec3ToFloat.glsl"/>

	<!-- Shader code -->
	<extend-configuration-property name="gdx.files.classpath" value="shader/bloomSum.frag"/>
	<extend-configuration-property name="gdx.files.classpath" value="shader/brightnessFilter.frag"/>
	<extend-configuration-property name="gdx.files.classpath" value="shader/gamma.frag"/>
	<extend-configuration-property name="gdx.files.classpath" value="shader/gaussianBlur.frag"/>
	<extend-configuration-property name="gdx.files.classpath" value="shader/viewToScreenCoords.vert"/>

	<extend-configuration-property name="gdx.reflect.include" value="com.gempukku.libgdx.graph.data.FieldType"/>
	<extend-configuration-property name="gdx.reflect.include"
								   value="com.gempukku.libgdx.graph.pipeline.PipelineFieldType"/>
	<extend-configuration-property name="gdx.reflect.include" value="com.gempukku.libgdx.graph.shader.ShaderFieldType"/>
</module>
